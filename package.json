{
  "name": "@efk3/angular-busy",
  "version": "1.0.0-rc.1",
  "license": "MIT",
  "author": "Kriszti√°n Fekete <en@efk3.net>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Efk3/angular-busy.git"
  },
  "scripts": {
    "build": "ng-packagr -p package.json",
    "tsc": "tsc",
    "prettify:ts": "prettier --parser typescript --write src/**/*.ts",
    "precommit": "lint-staged",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --maxWorkers=2",
    "codecov": "codecov"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": [
      "prettier --parser markdown --write",
      "git add"
    ],
    "*.ts": [
      "prettier --parser typescript --write",
      "git add"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "node_modules",
      "testing"
    ],
    "preset": "jest-preset-angular",
    "roots": [
      "./src/"
    ],
    "setupTestFrameworkScriptFile": "./test/setup-jest.ts",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.spec.json"
      }
    },
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "peerDependencies": {
    "@angular/core": "^5.0.0",
    "@angular/common": "^5.0.0",
    "rxjs": "^5.5.0"
  },
  "devDependencies": {
    "@angular/cli": "~1.7.2",
    "@angular/common": "^5.2.9",
    "@angular/compiler": "^5.2.9",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@angular/platform-browser": "^5.2.9",
    "@angular/platform-browser-dynamic": "^5.2.9",
    "@types/jest": "^22.2.2",
    "@types/node": "~6.0.60",
    "codecov": "^3.0.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "jest-preset-angular": "^5.2.1",
    "lint-staged": "^7.0.0",
    "ng-packagr": "^2.2.0",
    "prettier": "^1.11.1",
    "rxjs": "^5.5.6",
    "tslint": "~5.9.1",
    "tslint-angular": "^1.1.1",
    "typescript": "~2.6.0",
    "zone.js": "^0.8.4"
  },
  "dependencies": {}
}
